# Federated Genomic Imputation Platform - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Django Secret Key (REQUIRED - Generate a new one for production)
SECRET_KEY=django-insecure-dev-key-change-in-production

# Debug Mode (Set to False in production)
DEBUG=True

# Allowed Hosts (Comma-separated list of allowed hostnames)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,web

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Settings
DB_NAME=federated_imputation
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Database Connection Pool Settings
DB_CONN_MAX_AGE=60
DB_CONN_HEALTH_CHECKS=True

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis URL for Celery and Caching
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# API KEYS AND EXTERNAL SERVICES
# =============================================================================

# H3Africa API Configuration
H3AFRICA_API_URL=https://h3africa.org/api/v1/
H3AFRICA_API_KEY=your_h3africa_api_key_here

# Michigan Imputation Server API
MICHIGAN_API_URL=https://imputationserver.sph.umich.edu/api/v2/
MICHIGAN_API_KEY=your_michigan_api_key_here

# GA4GH Service Configuration
GA4GH_API_URL=https://your-ga4gh-service.org/ga4gh/wes/v1/
GA4GH_API_KEY=your_ga4gh_api_key_here

# DNASTACK Configuration
DNASTACK_API_URL=https://omics.dnastack.com/api/v1/
DNASTACK_API_KEY=your_dnastack_api_key_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Session Security
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_AGE=604800

# CSRF Protection
CSRF_COOKIE_SECURE=False
CSRF_COOKIE_HTTPONLY=False
CSRF_COOKIE_SAMESITE=Lax

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# Email Backend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Settings (for production)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_app_password

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=104857600
DATA_UPLOAD_MAX_MEMORY_SIZE=104857600

# Media and Static Files
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Logging Level
LOG_LEVEL=INFO

# Sentry DSN (for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Cache Configuration
CACHE_TIMEOUT=300

# Celery Configuration
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=True

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Tools
ENABLE_DEBUG_TOOLBAR=False
ENABLE_SILK_PROFILING=False

# Testing Configuration
TEST_RUNNER=django.test.runner.DiscoverRunner

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION_LEVEL=6

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
ENABLE_ADVANCED_ANALYTICS=False
ENABLE_REAL_TIME_MONITORING=True
ENABLE_BATCH_OPERATIONS=False
ENABLE_API_RATE_LIMITING=True

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Cloud Storage (Optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your_bucket_name
# AWS_S3_REGION_NAME=us-east-1

# Google Cloud Storage (Optional)
# GCS_BUCKET_NAME=your_gcs_bucket
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# PRODUCTION SECURITY CHECKLIST
# =============================================================================

# Before deploying to production, ensure:
# 1. SECRET_KEY is changed to a secure random value
# 2. DEBUG is set to False
# 3. ALLOWED_HOSTS contains only your domain names
# 4. All API keys are properly configured
# 5. Database credentials are secure
# 6. HTTPS is enabled (set *_SECURE settings to True)
# 7. Regular security updates are applied
# 8. Backup system is configured and tested

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================

# Development Environment
# Use default values above

# Staging Environment
# ENVIRONMENT=staging
# DEBUG=False
# ALLOWED_HOSTS=staging.yourdomain.com

# Production Environment
# ENVIRONMENT=production
# DEBUG=False
# SECRET_KEY=your_production_secret_key
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
